# // Gettings Info
function print_install() {
echo -e "${PURPLE} =============================== ${FONT}"
echo -e "${YELLOW} # $1 ${FONT}"
echo -e "${PURPLE} =============================== ${FONT}"
sleep 1
}
function print_success() {
if [[ 0 -eq $? ]]; then
echo -e "${PURPLE} =============================== ${FONT}"
echo -e "${Green} # $1 berhasil dipasang"
echo -e "${PURPLE} =============================== ${FONT}"
sleep 2
fi
}
