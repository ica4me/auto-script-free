# . Liner 
function baris_panjang() {
  echo -e "${PURPLE} â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”â€”${NC}"
}

function Xwan_Banner() {
clear
baris_panjang
echo -e " ${BG_BLU}              $nama               ${NC}"
baris_panjang
}

function Sc_Credit(){
sleep 1
baris_panjang
echo -e "\033[2;35m      Terimakasih Telah Menggunakan ${NC}"
echo -e "\033[2;35m             Script Credit ${NC}"
echo -e "\033[2;35m           	Sabdo Palon  ${NC}"
baris_panjang
exit 1
}

# // jalankan perintah :  sleep 3 & loading $!
loading() {
  local pid=$1
  local delay=0.1
  local spin='-\|/'

  while ps -p $pid > /dev/null; do
    local temp=${spin#?}
    printf "[%c] " "$spin"
    local spin=$temp${spin%"$temp"}
    sleep $delay
    printf "\b\b\b\b\b\b"
  done

  printf "    \b\b\b\b"
}



g="\e[92;1m"
RED="\033[31m"
y='\033[1;93m'

LIMITSSH_SCRIPT="/usr/local/sbin/limitssh-ip"
CRON_FILE="/etc/cron.d/limitssh-ip"

check_cron_status() {
    if [ -e "$CRON_FILE" ]; then
        echo -e "\033[33m Status Limit IP : ${g}[ON]${NC}"
    else
        echo -e "\033[33m Status Limit IP : ${RED}[OFF]${NC}"
    fi
}

start_cron() {
clear
    # Input menit dari pengguna
baris_panjang
echo -e "\033[37m Just input a number in- ${NC}" 
echo -e "\033[33m Limit ip ssh ${NC}"
echo -e "\033[37m Format minutes ${NC}"
echo 
echo -e "\033[31m Example : ${NC}"
echo
echo -e "\033[32m 1   =   1 minutes ${NC}"
echo -e "\033[32m 2   =   2 minutes ${NC}"
echo
baris_panjang
echo
echo
    read -p "input minutes autokill (1-59): " menit
sleep 3 & loading $!

    # Validasi input
    if [[ ! "$menit" =~ ^[1-9]$|^[1-5][0-9]$ ]]; then
        echo -e "${RED}Input tidak valid.${NC}"
        return
    fi

    # Membuat isi tugas cron
    CRON_ENTRY="*/$menit * * * * root $LIMITSSH_SCRIPT"

    # Menambahkan atau memperbarui tugas cron
    echo -e "SHELL=/bin/sh\nPATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin\n$CRON_ENTRY" | tee "$CRON_FILE" > /dev/null

    # Pastikan izin file dan tugas cron
    chmod +x "$LIMITSSH_SCRIPT"
    chmod 644 "$CRON_FILE"
    
clear
Xwan_Banner
baris_panjang
echo
echo -e "\e[32m succesfully ${NC}"
echo
check_cron_status
echo -e "\033[33m Auto Shutdown   : $menit minutes${NC}"
echo
baris_panjang
Sc_Credit
read -p "Enter Back To Menu"
Lt-on-off
}

stop_cron() {
    rm -f "$CRON_FILE"
    Xwan_Banner
    baris_panjang
    echo
    echo -e "\033[32m succesfully ${NC}"
    echo
    echo -e " Status  : ${RED}NonActive${NC}"
    echo
    baris_panjang
    Sc_Credit
}



function Environment(){
clear
Xwan_Banner
baris_panjang
check_cron_status
baris_panjang
echo
echo -e "${CYAN} 1.  Start Limit Ip ssh ${NC}"
echo -e "${CYAN} 2.  Stopp Limit Ip ssh ${NC}"
echo -e "${CYAN} 3.  Check Status Limit${NC}"
echo -e "\033[31m x.  EXIT ${NC}"
echo
baris_panjang
echo
}
Environment
read -p "Select From Options [1/3 or x] :  " REPLY
    case $REPLY in
        1)
            start_cron
            ;;
        2)
            stop_cron
            ;;
        3)
            check_cron_status
            ;;
        *)
            exit
            ;;
    esac