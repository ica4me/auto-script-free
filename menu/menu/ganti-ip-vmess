#!/bin/bash

yellow="\033[0;33m"
ungu="\033[0;35m"
Red="\033[91;1m"
Cyan="\033[96;1m"
Xark="\033[0m"
BlueCyan="\033[5;36m"
WhiteBe="\033[5;37m"
GreenBe="\033[5;32m"
YellowBe="\033[5;33m"
BlueBe="\033[5;34m"
nama=$(cat /etc/xray/username)

# . Liner
function baris_panjang() {
  echo -e "${ungu} ——————————————————————————————————— ${Xark}"
}

function Xwan_Banner() {
  clear
  baris_panjang
  echo -e "${BlueCyan}           $nama      ${Xark}"
  baris_panjang
}

function Sc_Credit(){
  sleep 1
  baris_panjang
  echo -e "${BlueCyan}  Terimakasih Telah Menggunakan ${Xark}"
  echo -e "${BlueCyan}          Script Credit ${Xark}"
  echo -e "${BlueCyan}          $nama ${Xark}"
  baris_panjang
  exit 1
}

duration=3
frames=("██10%" "█████35%" "█████████65%" "█████████████80%" "█████████████████████90%" "█████████████████████████100%")

Loading_Animasi() {
  for ((i = 0; i < duration; i++)); do
    clear
    index=$((i % ${#frames[@]}))
    color_code=$((31 + i % 7))
    echo ""
    echo ""
    echo ""
    echo -e "\e[1;${color_code}m ${frames[$index]}\e[0m"
    sleep 0.5
  done
}

function Loading_Succes() {
  clear
  echo -e  "\033[5;32mSucces\033[0m"
  sleep 1
  clear
}

# Ambil daftar user
function Daftar_Account_Vmess() {
  grep -E "^### " "/etc/xray/config.json" | cut -d ' ' -f 2 | sort | uniq
}

# Main Program
Xwan_Banner
baris_panjang
echo -e "${WhiteBe} Daftar Akun VMESS:${Xark}"
echo ""

mapfile -t users < <(Daftar_Account_Vmess)

if [ ${#users[@]} -eq 0 ]; then
  echo -e "${Red} Tidak ada akun ditemukan! ${Xark}"
  Sc_Credit
fi

for i in "${!users[@]}"; do
  echo -e " [$((i+1))] ${users[$i]}"
done

baris_panjang
echo ""
read -p "Pilih Nomor Username: " pilih

if ! [[ "$pilih" =~ ^[0-9]+$ ]] || [ "$pilih" -lt 1 ] || [ "$pilih" -gt ${#users[@]} ]; then
  echo -e "${Red} Pilihan tidak valid! ${Xark}"
  Sc_Credit
fi

user="${users[$((pilih-1))]}"
limit_file="/etc/kyt/limit/vmess/ip/${user}"

# Validasi apakah file batasan IP sudah ada
if [ -e "$limit_file" ]; then
  current_iplimit=$(cat "$limit_file")

  baris_panjang
  echo -e "${Cyan} BEFORE IP LIMIT ${Xark}"
  echo ""
  echo -e "${GreenBe} Username : $user ${Xark}"
  echo -e "${GreenBe} Limit Ip : $current_iplimit ${Xark}"
  echo ""
  baris_panjang
  echo ""
  echo "" 
  read -p " Input New Ip : " new_iplimit
  baris_panjang

  Loading_Animasi
  Loading_Succes

  if [ -z "$new_iplimit" ]; then
    echo -e "$Red Input Invalid ${Xark}"
  else
    echo "$new_iplimit" > "$limit_file"

    Xwan_Banner
    baris_panjang
    echo -e "${GreenBe} Succesfully Updated ${Xark}"
    echo ""
    echo -e "${yellow} New Limit :  $new_iplimit ${Xark}"
    echo -e "${yellow} Username  : $user ${Xark}"
    echo ""
    baris_panjang
    Sc_Credit
  fi
else
  Loading_Animasi
  clear

  Xwan_Banner
  baris_panjang
  echo ""
  echo -e "${Red} Sorry ${Xark}"
  echo " File Limit Ip Untuk Nama $user Tidak Ditemukan"
  echo " Mohon Untuk segera Settings di Menu Change Limit Xray"
  echo -e "${Xark}"
  baris_panjang
  Sc_Credit
fi
