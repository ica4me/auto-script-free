echo -e "${PURPLE}â”‚${NC} RAM             : $(free -m | awk 'NR==2 {print $2}')    ${NC} "
echo -e "${PURPLE}â”‚${NC} UPTIME          : $(uptime -p | cut -d " " -f 2-10)${NC} "
echo -e "${PURPLE}â”‚${NC} IP VPS          : $(curl -s ipv4.icanhazip.com)     ${NC} "
echo -e "${PURPLE}â”‚${NC} CITY            : $(cat /etc/xray/city)    ${NC} "
echo -e "${PURPLE}â”‚${NC} ISP             : $(cat /etc/xray/isp)    ${NC} "
echo -e "${PURPLE}â”‚${NC} DOMAIN          : $(cat /etc/xray/domain)    ${NC} "
echo -e "${PURPLE}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"

}



function Service_Status() {
echo -e "${PURPLE}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC} "
